<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext }}</p>
    </div>
    <div class="my-4">
        {% if section.settings.btn_url == blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            {% assign shop_url = section.settings.btn_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.btn_label }}</a>
    </div>
</div>


{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
         {
            "type": "text",
            "id": "title",
            "default": "404",
            "label": "404 Heading Title"
         },
         {
            "type": "text",
            "id": "subtext",
            "default": "The page that you are looking for is not found",
            "label": "404 subtext"
         },
         {
            "type": "text",
            "id": "btn_label",
            "default": "Back to homepage",
            "label": "Button label"
         },
         {
            "type": "text",
            "id": "btn_url",
            "label": "Button URL"
         }
        ]
}
{% endschema %}